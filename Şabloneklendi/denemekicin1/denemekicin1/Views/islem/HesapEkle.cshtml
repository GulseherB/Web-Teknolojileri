@model denemekicin1.Models.Hesap

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Hesap Ekle - Business Casual</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/styles.css" rel="stylesheet" />
</head>

<body style="background-image: url('/assets/img/d.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center;">

    <header>
        <h1 class="site-heading text-center text-faded d-none d-lg-block">
            <span class="site-heading-upper text-primary mb-3">Aradığın Tarzı Bizimle Yakala</span>
            <span class="site-heading-lower">BİZE KATILDIĞIN İÇİN TEŞEKKÜRLER</span>
        </h1>
    </header>

    <!-- Navigation-->
    <!-- Buraya gerekli bir navbar eklenebilir -->

    <section class="page-section cta">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <div class="cta-inner bg-faded text-center rounded">
                        <h2 class="section-heading mb-5">
                            <span class="section-heading-upper">Yeni Hesap</span>
                            <span class="section-heading-lower">Bilgilerinizi Girin</span>
                        </h2>

                        <div class="alert-danger"> @TempData["msj"]</div>
                        <div class="row">
                            <div class="col-md-8 mx-auto">
                                <form asp-action="HesapKaydet">
                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                    <div class="form-group mb-3">
                                        <label asp-for="HesapAd" class="control-label"></label>
                                        <input asp-for="HesapAd" class="form-control" placeholder="Adınızı girin" />
                                        <span asp-validation-for="HesapAd" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="HesapSoyad" class="control-label"></label>
                                        <input asp-for="HesapSoyad" class="form-control" placeholder="Soyadınızı girin" />
                                        <span asp-validation-for="HesapSoyad" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="HesapEmail" class="control-label"></label>
                                        <input asp-for="HesapEmail" class="form-control" placeholder="E-posta adresinizi girin" />
                                        <span asp-validation-for="HesapEmail" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="HesapSifre" class="control-label"></label>
                                        <input asp-for="HesapSifre" type="password" class="form-control" placeholder="Şifrenizi girin" />
                                        <span asp-validation-for="HesapSifre" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Hesap Ekle" class="btn btn-primary btn-lg" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer text-faded text-center py-5">
        <div class="container"><p class="m-0 small">Kadıköy Güzellik Merkezi 2024</p></div>
        <div class="container"><p class="m-0 small">Adres: Bahariye Caddesi No: 123, Kadıköy, İstanbul</p></div>
        <div class="container"><p class="m-0 small">Telefon: +90 216 555 1234</p></p></div>
        <div class="container"><p class="m-0 small">E-posta: info@kadikoyguzellikmerkezi.com</p></div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/js/scripts.js"></script>
</body>
</html>
