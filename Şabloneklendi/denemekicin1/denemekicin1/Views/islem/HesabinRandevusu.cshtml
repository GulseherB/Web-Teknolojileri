@using System.Linq


@if (TempData["msj"] != null)
{
    <div class="alert alert-info">@TempData["msj"]</div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Business Casual - Start Bootstrap Theme</title>

    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <script src="~/js/scripts.js"></script>
    <link href="~/css/styles.css" rel="stylesheet" />


</head>
<body style="background-image: url('/assets/img/d.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center;">

    <header>
        <h1 class="site-heading text-center text-faded d-none d-lg-block">
            <span class="site-heading-upper text-primary mb-3">KADIKÖY GÜZELLİK MERKEZİ</span>
            <span class="site-heading-lower">Randevularınız</span> 
            
        </h1>
    </header>
    <br />
    <!-- Navigation-->

    <section class="page-section about-heading">
        <div class="container">
           


            <div class="about-heading-content">
                <div class="row">
                    <div class="col-xl-9 col-lg-10 mx-auto">
                        <div class="bg-faded rounded p-5">
                            @if (Model != null && Model.Count > 0)

                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Randevu ID</th>
                                            <th>Randevu Günü</th>
                                            <th>Randevu Saati</th>
                                            <th>Çalışan</th>
                                            <th>İşlemler</th>
                                            <th>Toplam Tutar</th>
                                            <th>Durum</th>
                                            <th>İşlem</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var randevu in Model)
                                        {
                                            <tr>
                                                <td>@randevu.RandevuID</td>
                                                <td>@randevu.RandevuGun</td>
                                                <td>@randevu.RandevuSaat:00</td> <!-- Saat bilgisi -->
                                                <td>@randevu.Calisan.CalisanAd @randevu.Calisan.CalisanSoyad</td> <!-- Çalışan Adı ve Soyadı -->
                                                <td>@randevu.SacIslemleri</td> <!-- Saç işlemleri -->
                                                <td>@randevu.ToplamTutar</td> <!-- Toplam Tutar -->
                                                <td>@(randevu.RandevuBitisSaati > DateTime.Now.Hour ? "Geçerli" : "Geçmiş")</td> <!-- Randevu Durumu -->
                                                <td>
                                                    <a href="@Url.Action("RandevuSilk", "islem", new { id = randevu.RandevuID })" class="btn btn-danger">Sil</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>Hiç randevunuz bulunmamaktadır.</p>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--<img src="~/assets/img/about.jpg" />-->

    <footer class="footer text-faded text-center py-5">
        <div class="container"><p class="m-0 small">Kadıköy Güzellik Merkezi 2024</p></div>
        <div class="container"><p class="m-0 small">Adres: Bahariye Caddesi No: 123, Kadıköy, İstanbul</p></div>
        <div class="container"><p class="m-0 small">Telefon: +90 216 555 1234</p></p></div>
        <div class="container"><p class="m-0 small">E-posta: info@kadikoyguzellikmerkezi.com</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>
</html>
