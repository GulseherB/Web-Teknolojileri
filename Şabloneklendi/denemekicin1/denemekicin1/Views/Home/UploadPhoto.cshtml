@{
    ViewData["Title"] = "Fotoğraf Yükle";
}

<h2>Fotoğraf Yükle</h2>

<form asp-action="UploadPhoto" enctype="multipart/form-data" method="post">
    <div>
        <label for="photo">Bir fotoğraf seçin:</label>
        <input type="file" name="photo" required />
    </div>
    <button type="submit">Yükle ve Analiz Et</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}
