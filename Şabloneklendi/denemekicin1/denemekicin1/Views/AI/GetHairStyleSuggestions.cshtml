<body style="background-image: url('/assets/img/d.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center;">

    <header>
        <h1 class="site-heading text-center text-faded d-none d-lg-block">
            <span class="site-heading-upper text-primary mb-3">KADIKÖY GÜZELLİK MERKEZİ</span>
            <span class="site-heading-lower">YAPAY ZEKA SAÇ STİLİ ÖNERİSİ</span>
        </h1>
    </header>
    <!-- Navigation-->

    <section class="page-section about-heading">
        <div class="container">

            </center>

            <div class="about-heading-content">
                <div class="row">
                    <div class="col-xl-9 col-lg-10 mx-auto">
                        <div class="bg-faded rounded p-5">
                           

                            @if (ViewBag.Error != null)
                            {
                                <p style="color:red;">@ViewBag.Error</p>
                            }
                            <center>  
                            <form asp-action="GetHairStyleSuggestions" method="post" enctype="multipart/form-data">
                                <div>
                                    <label for="faceShape">Yüz Şekli:</label>
                                    <input type="text" name="faceShape" required />
                                </div>
                                <div>
                                    <label for="skinType">Cilt Tipi:</label>
                                    <input type="text" name="skinType" required />
                                </div>
                                <div>
                                    <label for="hairLength">Saç Uzunluğu:</label>
                                    <input type="text" name="hairLength" required />
                                </div>
                                <div>
                                    <label for="naturalHairColor">Doğal Saç Rengi:</label>
                                    <input type="text" name="naturalHairColor" required />
                                </div>
                                <div>
                                    <label for="additionalFeatures">Ekstra Özellikler:</label>
                                    <textarea name="additionalFeatures"></textarea>
                                </div>
                                <div>
                                    <label for="uploadedPhoto">Fotoğraf Yükle:</label>
                                    <input type="file" name="uploadedPhoto" accept="image/*" />
                                </div>
                                <button type="submit">Öneri Al</button>
                            </form>
                            </center>
                        </div>
                    </div>
                </div>
            </div>
            </center>
        </div>
    </section>

